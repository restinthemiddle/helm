{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github/workflows/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "helm-docs/releases/download/v(?<currentValue>[^/]+)/helm-docs_[^_]+_"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "norwoodj/helm-docs"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
